        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="theme-color" content="#263238">
        {{!Title and description}}
        <title>{{meta_title}}</title>
        <meta name="description" content="{{meta_description}}" />
        {{!CSS}}
        <link type="text/css" rel="stylesheet" href="{{asset "assets/css/materialize.min.css"}}" media="screen,projection">
        <link type="text/css" rel="stylesheet" href="{{asset "assets/css/style.css"}}" media="screen,projection">  
        {{! Social Meta Tags If you need..}}
        {{! Ghost header injection }}
        {{ghost_head}}
    </head>
    <body class="{{body_class}}">
        {{!Sidenav and Navbar}}
        <header class="clearfix sparwerkerHeader">
            <div class="wrapper">
              <a class="sparwerkerImageLink" href="https://www.aws.sparwerker.de"><img src="https://www.sparwerker.de/images/logo.svg" alt="sparwerker.de BERATEN.SANIEREN.SPAREN" id="headerLogo"><span class="badge blogBadge">BLOG</span></a>
